generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  role       Role     @default(APPLICANT)
  phone      String?
  bio        String?  @db.Text
  experience String?  @db.Text
  skills     String?  @db.Text
  savedCvUrl String?
  profileImageUrl String?
  company    Company?
  applications Application[]
  notifications Notification[]
  conversationsAsHr Conversation[] @relation("HrConversations")
  conversationsAsApplicant Conversation[] @relation("ApplicantConversations")
  messages   Message[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum Role {
  APPLICANT
  HR
}

model Company {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int      @unique
  name        String
  logoUrl     String?
  description String?
  location    String?
  jobs        Job[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Job {
  id           Int      @id @default(autoincrement())
  company      Company  @relation(fields: [companyId], references: [id])
  companyId    Int
  title        String
  description  String
  requirements String
  type         String
  status       JobStatus @default(OPEN)
  applications Application[]
  conversations Conversation[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum JobStatus {
  OPEN
  CLOSED
}

model Application {
  id          Int      @id @default(autoincrement())
  job         Job      @relation(fields: [jobId], references: [id])
  jobId       Int
  applicant   User     @relation(fields: [applicantId], references: [id])
  applicantId Int
  cvUrl       String
  status      AppStatus @default(PENDING)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Conversation {
  id          Int       @id @default(autoincrement())
  jobId       Int
  job         Job       @relation(fields: [jobId], references: [id])
  hrId        Int
  hr          User      @relation("HrConversations", fields: [hrId], references: [id])
  applicantId Int
  applicant   User      @relation("ApplicantConversations", fields: [applicantId], references: [id])
  messages    Message[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([jobId, hrId, applicantId])
}

model Message {
  id             Int          @id @default(autoincrement())
  conversationId Int
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  senderId       Int
  sender         User         @relation(fields: [senderId], references: [id])
  content        String       @db.Text
  isRead         Boolean      @default(false)
  createdAt      DateTime     @default(now())
}

enum AppStatus {
  PENDING
  REVIEWED
  INTERVIEW
  ACCEPTED
  REJECTED
}

model Notification {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  title     String
  message   String   @db.Text
  isRead    Boolean  @default(false)
  type      String   // e.g., 'APPLICATION_STATUS', 'SYSTEM_ALERT'
  relatedId Int?     // e.g., Application ID
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
